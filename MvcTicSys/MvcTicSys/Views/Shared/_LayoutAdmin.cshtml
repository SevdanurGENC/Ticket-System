<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
                    <h1>Ticket System - Admin Paneli</h1>
           
            <div id="logindisplay">
             
               @if (Request.IsAuthenticated)
               {
                   <strong>Sisteme Hosgeldiniz; @Html.Encode(User.Identity.Name)</strong>
                   @Html.ActionLink("Cikis", "Cikis", "KullaniciGirisi");
               <ul id="menu">
                    <li>@Html.ActionLink("Kullanicilar", "Index", "AdminKullanicilar")</li>
                    <li>@Html.ActionLink("Sikayetler", "Index", "AdminSikayetler")</li>
                    <li>@Html.ActionLink("Onaylar", "Index", "AdminOnaylar")</li>
                    <li>@Html.ActionLink("Yetkiler", "Index", "AdminYetkiler")</li>
                </ul>
               }
               else
               {
           
                <ul id="menu">  
                    <li>@Html.ActionLink("Kullanici Kayit", "Create", "YeniKullaniciKaydi")</li>
                    <li>@Html.ActionLink("Kullanici Girisi", "Giris", "KullaniciGirisi")</li>
                </ul>
             
               }
               </div>

        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
