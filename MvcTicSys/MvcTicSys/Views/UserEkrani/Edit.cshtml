            @Html.EditorFor(model => model.SikayetMesaj)
            @Html.ValidationMessageFor(model => model.SikayetMesaj)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tarih)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tarih)
            @Html.ValidationMessageFor(model => model.Tarih)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Onay, "Onay Durumu")
